<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.topBar{
			background: url("images/topbar.png") repeat-x;
		}
	</ui:style>

	<g:LayoutPanel ui:field="layoutPanel" width="100%" height="100%">
		<g:layer left="0px" top="0px" height="44px" right="0px">
			<g:FlowPanel ui:field="topSlot" styleName="{style.topBar}"/>
		</g:layer>
		<g:layer left="0pct" top="44px" right="0.0pct" bottom="0px">
			<g:FlowPanel ui:field="contentSlot"/>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>
